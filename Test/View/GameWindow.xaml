<Window x:Class="Test.View.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test.View"
        mc:Ignorable="d"
        Title="GameWindow" Height="450" Width="800"
        DataContext="{StaticResource MainViewModel}">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_NewGame" Command="{Binding NewGameCommand, Source={StaticResource MainViewModel}}"/>
            <MenuItem Header="_Exit" Command="{Binding ExitCommand, Source={StaticResource MainViewModel}}"/>
        </Menu>
        
        <TextBlock DockPanel.Dock="Bottom" Text="{Binding CurrentPlayerColor, Source={StaticResource MainViewModel}}" Height="26"  VerticalAlignment="Top" MaxHeight="26" FontWeight="Bold"/>
        <local:GameGrid x:Name="GameBoard" DockPanel.Dock="Bottom"/>

    </DockPanel>

</Window>
