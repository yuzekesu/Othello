<Window x:Class="Othello.View.WinnerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello.View"
        mc:Ignorable="d"
        Title="WinnerDialog"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        >
    <DockPanel>
        <TextBlock Name="Winner_Dialog" DockPanel.Dock="Top" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="24"/>
        <Button Name="Okej_Button"  Content="OK" Width="75" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CloseTheDialog"/>
    </DockPanel>
</Window>
