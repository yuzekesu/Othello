<Window x:Class="Othello.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello.View"
        xmlns:viewmodel="clr-namespace:Othello.ViewModel;assembly=MainViewModel"
        xmlns:gamegrid="clr-namespace:Othello.View;assembly=GameGrid"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_NewGame" Command="{Binding NewGameCommand, Source={StaticResource MainViewModel}}" CommandParameter="{Binding ElementName=Grid1}"/>
            <MenuItem Header="_Exit" Command="{Binding ExitCommand, Source={StaticResource MainViewModel}}"/>
            <MenuItem Header="_Debug">
                <MenuItem Header="Debug Command" Command="{Binding DebugCommand, Source={StaticResource MainViewModel}}"/>
            </MenuItem>
        </Menu>
        <gamegrid:GameGrid DockPanel.Dock="Bottom"/>

    </DockPanel>
</Window>
